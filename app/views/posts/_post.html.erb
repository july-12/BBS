<section id="<%= dom_id post %>" class="flex gap-4 px-2 py-4 border-b border-solid border-slate-200 cursor-pointer hover:bg-stone-100">
  <%= render "components/avatar", user: post.author %>
  <main class="flex-1 flex flex-col justify-between h-12">
    <header class="flex items-center gap-2">
      <p class="text-md leading-none tracking-tight text-gray-500">
        <% if post.category.present? %>
          <span><%= link_to post.category.name, category_slug_path(post.category.slug)  %></span>
        <% end %>
      </p>
      <p class="text-xl font-semibold leading-none tracking-tight text-gray-900"> <%= link_to post.title, post, data: { turbo_frame: "_top" }, class: 'hover:text-blue-600 hover:undeline' %> </p>
    </header>
    <div class="flex gap-1 text-slate-500 text-sm">
      <span><%= post.author&.name %> </span>
      <span class="dot">&#183;</span>
      <span><%= post.created_at.strftime("%d %b %Y") %> </span>
    </div>
  </main>
  <footer class="flex items-center gap-2">
    <div class="avatar-group -space-x-5 rtl:space-x-reverse">
      <% post.repliers.each do |replier| %>
        <div id="<%= dom_id replier %>" >
          <%= render "components/avatar", user: replier %>
        </div>
      <% end %>
    </div>
    <% if post.comments.count > 0 %>
      <div class="inline-flex items-center justify-center py-1 px-2 bg-blue-50 rounded-lg font-bold text-xs"> <%= post.comments.count %></div>
    <% end %>
  </footer>
</section>