<div class="flex space-x-4 rtl:space-x-reverse py-4 border-b border-solid border-slate-100">
  <div class="avatar placeholder">
    <div class="bg-neutral text-neutral-content rounded-full w-10 h-10">
      <%= image_tag "logo.jpg", class: "w-8 h-8 rounded-full" %>
    </div>
  </div>
  <div class="flex-1 min-w-0">
    <div class="flex items-center justify-between mb-4">
      <div class="comment-info flex gap-2 items-center ">
        <p class="text-lg font-medium text-gray-900 truncate dark:text-white">
          <%= comment.commenter.name %>
        </p>
        <span class="text-sm text-gray-400">
          <%= time_ago_in_words(comment.updated_at) %>
        </span>
      </div>
      <div class="text-sm text-gray-400">
        reply
      </div>
    </div>
    <p class="text-base text-gray-500 truncate dark:text-gray-400">
      <%= comment.content %>
    </p>
  </div>
</div>